{
  "label": "Webstead Default 2026",
  "author": "CrowderSoup",
  "version": "0.1.3",
  "description": "Reference theme with annotated templates and assets for Webstead-style blogs.",
  "widget_areas": [
    {"slug": "before_content", "label": "Before Content"},
    {"slug": "footer", "label": "Footer"}
  ],
  "settings": {
    "fields": {
      "ink_color": {
        "type": "color",
        "label": "Ink",
        "default": "#161413"
      },
      "muted_color": {
        "type": "color",
        "label": "Muted text",
        "default": "#5a605f"
      },
      "inverse_text_color": {
        "type": "color",
        "label": "Inverse text",
        "default": "#ffffff"
      },
      "paper_color": {
        "type": "color",
        "label": "Paper",
        "default": "#f6f2ea"
      },
      "panel_color": {
        "type": "color",
        "label": "Panel",
        "default": "#ffffff"
      },
      "surface_color": {
        "type": "color",
        "label": "Surface",
        "default": "#fffdf9"
      },
      "surface_warm_color": {
        "type": "color",
        "label": "Surface warm",
        "default": "#f3eee5"
      },
      "surface_accent_color": {
        "type": "color",
        "label": "Surface accent",
        "default": "#fff4e8"
      },
      "accent_color": {
        "type": "color",
        "label": "Accent",
        "default": "#d56b30"
      },
      "accent_deep_color": {
        "type": "color",
        "label": "Accent deep",
        "default": "#9a4c2b"
      },
      "line_color": {
        "type": "color",
        "label": "Line",
        "default": "#ded8cd"
      },
      "gradient_start_color": {
        "type": "color",
        "label": "Background gradient start",
        "default": "#f5efe6"
      },
      "gradient_end_color": {
        "type": "color",
        "label": "Background gradient end",
        "default": "#fbfaf7"
      },
      "shadow_color": {
        "type": "color_alpha",
        "label": "Shadow color",
        "default": "rgba(22, 20, 19, 0.08)"
      },
      "accent_shadow_color": {
        "type": "color_alpha",
        "label": "Accent shadow",
        "default": "rgba(213, 107, 48, 0.18)"
      },
      "font_body": {
        "type": "string",
        "label": "Body font stack",
        "default": "\"IBM Plex Sans\", \"Avenir\", \"Trebuchet MS\", sans-serif"
      },
      "font_heading": {
        "type": "string",
        "label": "Heading font stack",
        "default": "\"Fraunces\", \"Iowan Old Style\", \"Palatino\", serif"
      },
      "font_mono": {
        "type": "string",
        "label": "Mono font stack",
        "default": "\"IBM Plex Mono\", \"Menlo\", \"Consolas\", \"Courier New\", monospace"
      },
      "radius_sm": {
        "type": "string",
        "label": "Radius small",
        "default": "12px"
      },
      "radius_md": {
        "type": "string",
        "label": "Radius medium",
        "default": "16px"
      },
      "radius_lg": {
        "type": "string",
        "label": "Radius large",
        "default": "20px"
      },
      "show_background_pattern": {
        "type": "boolean",
        "label": "Show background pattern",
        "default": true
      },
      "home_feed_mode": {
        "type": "select",
        "label": "Home feed mode",
        "default": "home",
        "choices": ["home", "blog"]
      },
      "home_feed_redirect": {
        "type": "boolean",
        "label": "Redirect /blog to / when home feed is enabled",
        "default": false
      }
    }
  }
}
